{
   "ts-node": {
      "require": ["tsconfig-paths/register"]
   },
   "compilerOptions": {
      "typeRoots": ["./node_modules/@types", "./src/@Types"],
      "target": "esnext",
      "module": "commonjs",
      "moduleResolution": "node",
      "baseUrl": ".",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "noEmit": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "plugins": [
         {
            "name": "next"
         }
      ],
      "paths": {
         "@VehicleParts/*": ["./src/VehicleParts/*"],
         "@/*": ["./*"],
         "@Utils/*": ["./src/utils/*"],
         "@Types/*": ["./src/@Types/*"],
         "@XML/*": ["./XML/*"]
      }
   },
   "include": ["package.json", "**/*", "**/*", ".next/types/**/*", "src/**/*"],
   "exclude": ["node_modules"]
}
